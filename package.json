{
  "name": "cozy-konnector-template",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konnectors/cozy-konnector-template.git"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "main": "./src/index.js",
  "dependencies": {
    "cozy-konnector-libs": "^3.0.0"
  },
  "eslintConfig": {
    "env": {
      "es6": true,
      "jest": true,
      "node": true
    },
    "extends": [
      "eslint-config-cozy-app"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "cozy-konnector-dev ./src/index.js",
    "standalone": "cozy-konnector-standalone ./src/index.js",
    "build": "webpack",
    "format": "prettier --write '**/*.{js,json}'",
    "lint": "eslint .",
    "deploy": "git-directory-deploy --directory build/ --branch build --repo=https://github.com/konnectors/cozy-konnector-template.git",
    "deploy:prod": "git-directory-deploy --directory build/ --branch latest --repo=https://github.com/konnectors/cozy-konnector-template.git"
  },
  "devDependencies": {
    "copy-webpack-plugin": "^4.0.1",
    "git-directory-deploy": "^1.5.1",
    "prettier": "1.11.1",
    "eslint": "4.18.2",
    "eslint-config-cozy-app": "^0.4.0",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.10"
  }
}
